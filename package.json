{
  "name": "maidy",
  "version": "1.0.0",
  "description": "CLI tool to render Mermaid diagrams to SVG/ASCII and convert Markdown to HTML",
  "type": "module",
  "bin": {
    "maidy": "./index.ts"
  },
  "scripts": {
    "dev": "bun run index.ts",
    "build": "bun build --compile --minify --sourcemap ./index.ts --outfile maidy"
  },
  "dependencies": {
    "beautiful-mermaid": "^0.1.3",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
